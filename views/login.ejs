<div class="  container d-flex flex-column flex-md-row align-items-center justify-content-around" style="min-height: 100vh;">
    <div class="d-none d-md-block">
        <img class="rounded" src="https://studentcover.in/login-illustration.svg"  height="300" width="350" alt="login">
    </div>
    <div class="card mb-2 p-4 w-80 w-md-100 animate__animated animate__backInUp">

        <form action="/login" method="post">
            <p class="fs-4 text-center text-success animate__animated animate__pulse"> Login to begin</p>
            <% if (errorMessages && errorMessages.length > 0) { %>
                <div class="alert alert-danger" role="alert">
                  <ul>
                    <% errorMessages.forEach(error => { %>
                      <li><%= error.msg %></li>
                    <% }); %>
                  </ul>
                </div>
              <% } %>
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Email address</label>
                <input type="email" class="form-control" name="email" id="exampleInputEmail1" aria-describedby="emailHelp" />
                <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Password</label>
                <input type="password" name="password" class="form-control" id="exampleInputPassword1" />
            </div>
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn fs-6 btn-primary">Submit</button>
                <a href="/register" class="btn btn-md fs-6 btn-light">Register</a>
            </div>
        </form>
    </div>
</div>
