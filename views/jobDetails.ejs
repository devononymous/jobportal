<div class="container mt-3">
    <div class="card">
        <div class="card-header">
            <% if (job) { %>
            <p class="card-title fs-2"> <span class=" fs-2 text-danger"><%= job.tech %></span> Opportunity in <span class="text-info fs-2"> <%= job.location %> </span>at  <span class="text-warning fs-2"> <%= job.job_title %></span></h5>
            <% } %>
        </div>
        <div class="card-body">
            <% if (job) { %>
            <h5 class="card-title"><%= job.job_title %></h5>
            <p class="card-text">Location: <%= job.location %></p>
            <p class="card-text">Tech: <%= job.tech %></p>
            <p class="card-text">Pay: <%= job.pay %> LPA</p>
            <p class="card-text">Apply Till: <%= job.applyTill %></p>
            <p class="card-text">Openings: <%= job.openings %></p>
            <p class="card-text">Applicants: <%= job.applicants %></p>

            <label for="skill_set">Skillset</label>
            <button class="card-text"><%= job.skill_set %>
            </button>
             <div class="mt-3">

                <div class="mt-3">
                    <a href="#" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#applyModal">Apply Now</a>
                </div>
             </div>
             <button class="btn btn-success rounded mt-2 ">Posted on : <%= job.created %> </button>
            <% } else { %>
            <p class="alert alert-danger">Job not found</p>
            <% } %>
        </div>
    </div>
</div>
<div class="modal fade" id="applyModal" tabindex="-1" aria-labelledby="applyModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="applyModalLabel">Apply for <%= job.job_title %></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <% if (errors && errors.length > 0) { %>
                    <div class="alert alert-danger" role="alert">
                        <% errors.forEach(error => { %>
                            <%= error.msg %><br>
                        <% }) %>
                    </div>
                <% } %>
                <form action="/jobs/<%= job.id %>" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="applicantName" class="form-label">Name</label>
                        <input type="text" class="form-control" id="applicantName" name="applicantName">
                    </div>
                    <div class="mb-3">
                        <label for="applicantEmail" class="form-label">Email address</label>
                        <input type="email" class="form-control" id="applicantEmail" name="applicantEmail">
                    </div>
                    <div class="mb-3">
                        <label for="applicantResume" class="form-label">Resume</label>
                        <input type="file" class="form-control" id="applicantResume" name="applicantResume">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit Application</button>
                </form>
            </div>
        </div>
    </div>
</div>
